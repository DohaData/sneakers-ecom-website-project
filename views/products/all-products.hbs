<div class="container mt-4">
  <!-- Filters -->
  <div class="row mb-4">
    <div class="col-12 filters">
      <h4>
        <button
          class="btn btn-primary"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#filtersCollapse"
          aria-expanded="false"
          aria-controls="filtersCollapse"
        >
          Filters
        </button>
      </h4>
      <div class="collapse" id="filtersCollapse">
        <form action="/products/filter" method="GET">
          <div class="form-group">
            <label for="price">Price:</label>
            <section class="range-slider">
              <span class="rangeValues"></span>
              <input
                name="minPriceSelected"
                value="{{minPrice}}"
                min="{{minPrice}}"
                max="{{maxPrice}}"
                step="1"
                type="range"
                class="form-range"
              />
              <input
                name="maxPriceSelected"
                value="{{maxPriceSelected}}"
                min="{{minPrice}}"
                max="{{maxPrice}}"
                step="1"
                type="range"
                class="form-range"
              />
              <p></p>
            </section>
          </div>
          <div class="form-group">
            <label for="brand">Brand:</label>
            <select class="form-control" id="brand" name="brand">
              <option value="">All Brands</option>
              {{#each brands}}
                <option value="{{this}}">{{this}}</option>
              {{/each}}
            </select>
          </div>
          <div class="filter-buttons">
            <button type="submit" class="btn btn-primary">Apply Filters</button>
            <a href="/products" class="btn btn-primary">Reset</a>
          </div>
        </form>
      </div>
    </div>
  </div>
  <!-- Products Grid -->
  <div class="row">
    {{#if products}}
    {{#each products}}
      <div class="col-md-4 product-card flex-column">
        <div class="card">
          <a href="/products/{{_id}}">
            <img src="{{imageUrl}}" class="card-img-top" alt="{{name}}" />
            <div class="card-body">
              <h5 class="card-title">{{name}}</h5>
              <p class="card-text">{{description}}</p>
              <p class="card-text">Price: ${{price}}</p>
              <p class="card-text">Model: {{model}}</p>
              <p class="card-text">Brand: {{brand}}</p>
            </div>
          </a>
          <a href="/cart/add-product/{{_id}}" class="btn btn-primary">Buy
            Now</a>
        </div>
      </div>
    {{/each}}
    {{else}}
      <p>No products matching the selection found</p>
    {{/if}}
  </div>
</div>